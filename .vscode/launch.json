{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Web Interface (New Architecture)",
            "type": "debugpy",
            "request": "launch",
            "module": "pdftool.interfaces.web.main",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PDFTOOL_DEBUG": "true",
                "PDFTOOL_LOG_LEVEL": "DEBUG",
                "PDFTOOL_API_PORT": "8000"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false,
            "pythonArgs": ["-Xdev"]
        },
        {
            "name": "Debug Web Interface with Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "pdftool.interfaces.web.application:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8001",
                "--log-level",
                "debug",
                "--access-log"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PDFTOOL_DEBUG": "true",
                "PDFTOOL_LOG_LEVEL": "DEBUG",
                "PDFTOOL_API_PORT": "8001"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug New Architecture Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/simple_test.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PDFTOOL_DEBUG": "true",
                "PDFTOOL_LOG_LEVEL": "DEBUG"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug Service Manager",
            "type": "debugpy",
            "request": "launch",
            "module": "pdftool.interfaces.web.service_manager",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PDFTOOL_DEBUG": "true",
                "PDFTOOL_LOG_LEVEL": "DEBUG"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug GUI App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/pdftool/gui/main.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PDFTOOL_DEBUG": "true",
                "PDFTOOL_LOG_LEVEL": "DEBUG"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PDFTOOL_DEBUG": "true",
                "PDFTOOL_LOG_LEVEL": "DEBUG"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PDFTOOL_DEBUG": "true",
                "PDFTOOL_LOG_LEVEL": "DEBUG"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}